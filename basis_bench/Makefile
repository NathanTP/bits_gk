IDIR =.
CC=gcc
CFLAGS=-I$(IDIR) -O3

ODIR=obj
LDIR =

BINDIR=./bin
LIBS=

#==============================================================================
# Helper Functions
#==============================================================================
objify = $(patsubst %,$(ODIR)/%,$(1))
depify = $(patsubst %,$(IDIR)/%,$(1))

#==============================================================================
# Targets
#==============================================================================
$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o
